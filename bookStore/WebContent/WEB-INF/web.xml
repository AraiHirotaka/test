<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	id="WebApp_ID" version="3.1">
	
	<display-name>bookstore</display-name>
	
	<!-- Settings for actions (*.do) -->	
	<context-param>
		<param-name>/login.do</param-name>
		<param-value>jp.co.comnic.javalesson.webapp.bookstore.controller.LoginAction</param-value>
	</context-param>
	
	<context-param>
		<param-name>/logout.do</param-name>
		<param-value>jp.co.comnic.javalesson.webapp.bookstore.controller.LogoutAction</param-value>
	</context-param>
	
	<context-param>
		<param-name>/departments/remove.do</param-name>
		<param-value>jp.co.comnic.javalesson.webapp.bookstore.controller.RemoveAction</param-value>
	</context-param>
	
	<context-param>
		<param-name>/employees/remove.do</param-name>
		<param-value>jp.co.comnic.javalesson.webapp.bookstore.controller.RemoveAction</param-value>
	</context-param>
	
	<context-param>
		<param-name>/departments/insert.do</param-name>
		<param-value>jp.co.comnic.javalesson.webapp.bookstore.controller.InsertAction</param-value>
	</context-param>
	
	<context-param>
		<param-name>/employees/insert.do</param-name>
		<param-value>jp.co.comnic.javalesson.webapp.bookstore.controller.InsertAction</param-value>
	</context-param>
	
	<context-param>
		<param-name>/departments/edit.do</param-name>
		<param-value>jp.co.comnic.javalesson.webapp.bookstore.controller.UpdateAction</param-value>
	</context-param>
	
	<context-param>
		<param-name>/employees/edit.do</param-name>
		<param-value>jp.co.comnic.javalesson.webapp.bookstore.controller.UpdateAction</param-value>
	</context-param>
	
	<!-- Settings for JSP pages -->	
	<servlet>
		<servlet-name>Login</servlet-name>
		<jsp-file>/login.jsp</jsp-file>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>Login</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>DepartmentNew</servlet-name>
		<jsp-file>/departments/new.jsp</jsp-file>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>DepartmentNew</servlet-name>
		<url-pattern>/departments/new</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>EmployeeNew</servlet-name>
		<jsp-file>/employees/new.jsp</jsp-file>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>EmployeeNew</servlet-name>
		<url-pattern>/employees/new</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>DepartmentEdit</servlet-name>
		<jsp-file>/departments/edit.jsp</jsp-file>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>DepartmentEdit</servlet-name>
		<url-pattern>/departments/edit</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>EmployeeEdit</servlet-name>
		<jsp-file>/employees/edit.jsp</jsp-file>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>EmployeeEdit</servlet-name>
		<url-pattern>/employees/edit</url-pattern>
	</servlet-mapping>
	
</web-app>